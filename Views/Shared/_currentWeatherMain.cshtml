@model weatherMvc.Models.WeatherData
@{
    var weatherData = (WeatherData)ViewData["weatherData"];
    var locationData = (LocationData)ViewData["location"];
}
<div class="container" id="currentWeather">
    <div class="row">
        <div class="col">
            <h3>Currently: @weatherData.currently.temperature F</h3>
        </div>
        <div class="col">
            <h3>High: @weatherData.daily.data[0].temperatureHigh</h3>
        </div>
        <div class="col">
            <h3>Low: @weatherData.daily.data[0].temperatureLow</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3> It is currently: @weatherData.currently.summary</h3>
        </div>
        <div class="col">
            <h4>Chance of precipitation: @weatherData.currently.precipProbability%</h4>
        </div>
        <div class="col">
            <h4>Cloud cover: @weatherData.currently.cloudCover</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h6>This is your address from Google: @locationData.results[0].formatted_address</h6>
        </div>
        <div class="col">
            <h6>Latitude and Longitude: @locationData.results[0].geometry.location.lat, @locationData.results[0].geometry.location.lng</h6>
        </div>
        <div class="col">
            <h6></h6>
        </div>
    </div>
</div>

<div class="container" id="7day">
    <div class="row">
        <h6>
            @foreach (var day in @weatherData.daily.data)
            {
                <div class="col">
                    <p>@day.temperatureHigh</p>
                    <p>@day.temperatureLow</p>
                    <p>@day.summary</p>
                </div>
            }
        </h6>
    </div>
</div>

