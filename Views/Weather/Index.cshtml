@model weatherMvc.Models.WeatherData

@{
    ViewData["Title"] = "Index";
}
@{
    ViewData["Title"] = "Weather";
}


<div class="row">
    <h3>Current Weather:</h3>
    <br />
    <div class="form-group col-md-offset col-md">
        <label asp-for="currently.summary"></label>
        <span class="badge">The weather today is @Model.currently.summary</span>
        <br />

        <label asp-for="currently.temperature">Temperature</label>
        <span class="badge">@Model.currently.temperature Â°F</span>
        <br />

        <label asp-for="currently.humidity">Humidity</label>
        <span class="badge">@Model.currently.humidity %</span>
        <br />

        <label asp-for="currently.windGust">Wind Gust</label>
        <span class="badge">@Model.currently.windGust mp/h</span>
        <br />

        <label asp-for="currently.windSpeed">Wind Speed</label>
        <span class="badge">@Model.currently.windSpeed mp/h</span>
        <br />

        <label asp-for="currently.windBearing">Wind Bearing</label>
        <span class="badge">@Model.currently.windBearing</span>
        <br />

        <label asp-for="currently.precipProbability">Chance of Precipitation</label>
        <span class="badge">@Model.currently.precipProbability%</span>
        <br />

        <label asp-for="currently.visibility">Current Visibility</label>
        <span class="badge">@Model.currently.visibility</span>
        <br />
    </div>
</div>
<div class="row">
    <h3>Almanac Information:</h3>
</div>
<div class="row">
    <form method="get">
        <button asp-controller="weather" asp-action="setLocation" class="btn btn-success">Search Again</button>
    </form>
</div>

